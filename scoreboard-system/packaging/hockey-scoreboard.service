[Unit]
Description=Hockey Scoreboard Renderer
After=network.target

[Service]
Type=simple
User=scoreboard
Group=scoreboard
# Capabilities are attached to the binary via setcap in postinst
ExecStart=/usr/bin/hockey-scoreboard -c eth0 -s
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
